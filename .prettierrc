{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "singleQuote": true,
  "trailingComma": "none",
  "importOrder": [
    "^@/server/(.*)$",
    "^@/settings/(.*)$",
    "^@/constants/(.*)$",
    "^@/assets/(.*)$",
    "^@/lib/(.*)$",
    "^@/graphql/(.*)$",
    "^@/api/(.*)$",
    "^@/schemas/(.*)$",
    "^@/stores/(.*)$",
    "^@/hooks/(.*)$",
    "^@/providers/(.*)$",
    "^@/components/(.*)$",
    "^@/utils/(.*)$",
    "^@/types/(.*)$",
    "^@/styles/globals.css$",
    "^@/styles/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
